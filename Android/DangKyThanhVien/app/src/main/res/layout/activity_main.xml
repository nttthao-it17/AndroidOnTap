<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_main"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingBottom="15dp"
        android:text="Đăng ký Thành viên"
        android:textSize="30dp"
        android:textColor="#fff"
        android:gravity="center"
        android:textStyle="bold"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp">
        <TableRow>
            <TextView
                android:text="Họ tên"
                style="@style/text_color"/>
            <EditText
                android:id="@+id/edt_HoTen"
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:background="#fff"
                android:inputType="textAutoCorrect"/>
        </TableRow>
        <View
            android:layout_height="20dp"/>
        <TableRow>
            <TextView
                android:text="User name"
                style="@style/text_color"/>
            <EditText
                android:id="@+id/edt_username"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_width="230dp"
                android:background="#fff"/>
        </TableRow>
        <View
            android:layout_height="20dp"/>
        <TableRow>
            <TextView
                android:text="Mật khẩu"
                style="@style/text_color"/>
            <EditText
                android:id="@+id/edt_matKhau"
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:background="#fff"
                android:inputType="textPassword"/>
        </TableRow>
        <View
            android:layout_height="20dp"/>
        <TableRow>
            <TextView
                android:text="Ngày sinh"
                style="@style/text_color"/>
            <EditText
                android:id="@+id/edt_ngaySinh"
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:background="#fff"
                android:inputType="date"/>
        </TableRow>
        <View
            android:layout_height="20dp"/>
        <TableRow>
            <TextView
                android:text="Giới tính"
                style="@style/text_color"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rdNam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#fff"
                    android:text="Nam"
                    style="@style/text_color"/>
                <RadioButton
                    android:id="@+id/rdNu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:buttonTint="#fff"
                    android:text="Nữ"
                    style="@style/text_color"/>
            </RadioGroup>
        </TableRow>
    </TableLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quốc tịch"
            style="@style/text_color"/>
        <Spinner
            android:id="@+id/sp_quocTich"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_marginLeft="127dp"
            android:background="#fff"
            android:entries="@array/child_spinner"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/bg_spinner"
            android:layout_alignRight="@+id/sp_quocTich"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btnTao"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="TẠO"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"/>
</LinearLayout>