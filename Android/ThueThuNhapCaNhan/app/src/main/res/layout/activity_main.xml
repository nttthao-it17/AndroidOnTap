<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="TÍNH THUẾ TNCN"
        android:textColor="#000"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thu nhập trong tháng"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_below="@+id/title_main"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số người phụ thuộc"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_below="@+id/tv1"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/title_main"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/edt_luong"
            android:layout_width="180dp"
            android:layout_height="28dp"
            android:background="@drawable/bg_vien3d"
            android:gravity="center"
            android:inputType="numberSigned"/>
        <EditText
            android:id="@+id/edt_nguoiPT"
            android:layout_width="180dp"
            android:layout_height="28dp"
            android:background="@drawable/bg_vien3d"
            android:gravity="center"
            android:layout_marginTop="18dp"
            android:inputType="numberSigned"/>
    </LinearLayout>
    <TextView
        android:id="@+id/title_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv2"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Thời gian tính thuế"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Tháng"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_below="@+id/title_child"/>
    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Năm"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_below="@+id/title_child"
        android:layout_alignRight="@id/title_child"/>
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_child"
        android:layout_marginTop="40dp">
        <Spinner
            android:id="@+id/spThang"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_vien_don"
            android:entries="@array/spinnerThang"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/mipmap_drop"
            android:layout_alignRight="@id/spThang"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_child"
        android:layout_marginTop="40dp"
        android:layout_alignRight="@id/title_child">
        <Spinner
            android:id="@+id/spNam"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_vien_don"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/mipmap_drop"
            android:layout_alignRight="@id/spNam"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btnTinh"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="TÍNH TOÁN"
        android:textSize="16dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/relative"
        android:layout_marginTop="50dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/btnTinh"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thu nhập tính thuế của bạn là"
            android:textSize="25dp"
            android:textColor="#2C3C98"
            android:textStyle="italic"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_tntt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20000"
            android:textSize="28dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/btnTinh"
        android:layout_marginTop="150dp"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiền thuế TNCN của bạn là"
            android:textSize="25dp"
            android:textColor="#2C3C98"
            android:textStyle="italic"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_tncn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20000"
            android:textSize="28dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>
    </LinearLayout>

</RelativeLayout>